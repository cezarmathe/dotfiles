# Interactive shell configuration

source ~/.profile


### ENVIRONMENT VARIABLES ###

export ZSH_TMUX_AUTOSTART=true

source ~/.config/shell/env.sh &> /dev/null

#############################


########## ALIASES ##########

alias gs='git status'

alias ls='ls --color=auto'

alias edit='${EDITOR}'

source ~/.config/shell/alias.sh &> /dev/null

#############################


########## KEYCHAIN #########

source ~/.config/shell/keychain.sh &> /dev/null

#############################


######### FUNCTIONS #########

function git_additions_deletions() {
    local username="$1"; shift
    local branch="$1"; shift
    git log --author=${username} --shortstat ${branch} | \
        awk '/^ [0-9]/ { f += $1; i += $4; d += $6 } \
        END { printf("%d files changed, %d insertions(+), %d deletions(-)\n", f, i, d) }'
}

function targz() {
	local filename
	filename="$1"

	tar -cjf "${filename}.tar.gz" "${filename}"
}

source ~/.config/shell/functions.sh &> /dev/null

#############################

source ~/.config/shell/rc.sh &> /dev/null
